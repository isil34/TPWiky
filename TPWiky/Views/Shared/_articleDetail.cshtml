@model Article

<fieldset>
    

    <table class="table table-striped table-sm table-bordered text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Thème</th>
                <th>Contenu</th>
                <th>Date de création</th>
                <th>Date de Modification</th>
            </tr>
        </thead>
        <tbody id="contentArticle">

            <tr>
                <td id="ArticleId">
                    @Model.Id
                </td>
                <td>
                    @Model.Auteur
                </td>
                <td>
                    @Model.Theme
                </td>
                <td>
                    @Model.Contenu
                </td>
                <td>
                    @Model.DateCreation
                </td>
                <td>
                    @Model.DateModification
                </td>
                <td>
                    <a asp-action="Edit" asp-route-idToEdit="@Model.Id">Modifier</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-idToDelete="@Model.Id" onclick="return confirm('Sur ???');">Supprimer</a>
                </td>
                <td>
                    <a asp-action="Add" asp-route-articleId="@Model.Id" asp-controller="Commentaire">Ajouter un commentaire</a>
                </td>
            </tr>

        </tbody>
    </table>


</fieldset>